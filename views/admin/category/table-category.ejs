<div class="card shadow mb-4">
  <div class="card-header py-3">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-modal">
      Add Category
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th width="7%">#</th>
            <th>Name</th>
            <th>Action</th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Action</th>
          </tr>
        </tfoot>
        <tbody>
          <% for (let i = 0; i < category.length; i++){%>
          <tr>
            <td><%= i + 1 %></td>
            <td><%= category[i].name %></td>
            <td>
              <% if(category[i].itemId.length) { %>
              <a href="javascript:void()" class="btn btn-warning btn-circle btn-sm button-update"
                data-id="<%= category[i].id %>" data-name="<%= category[i].name %>">
                <i class="fas fa-pencil-alt"></i></a>
              <% } else { %>
              <form action="/admin/category/<%= category[i].id %>?_method=DELETE" method="POST">
                <a href="javascript:void()" class="btn btn-warning btn-circle btn-sm button-update"
                  data-id="<%= category[i].id %>" data-name="<%= category[i].name %>">
                  <i class="fas fa-pencil-alt"></i></a>
                <button type="submit" onclick="return confirm('Are you sure you want to delete this item?');"
                  class="btn btn-light btn-circle btn-sm">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
              <% } %>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>