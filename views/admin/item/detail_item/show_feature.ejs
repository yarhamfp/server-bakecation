<div class="tab-pane fade show active" id="show-feature" role="tabpanel" aria-labelledby="feature-tab">
  <!-- DataTales Example -->
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form action="/admin/item/add/feature" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="name">Name Feature *</label>
              <input type="text" class="form-control" name="name" placeholder="Enter name" required />
            </div>
            <div class="form-group">
              <label for="qty">Qty *</label>
              <input type="number" class="form-control" name="qty" placeholder="Enter qty" required />
            </div>
            <div class="form-group">
              <label for="image">Image *</label>
              <input type="file" class="form-control" name="image" required />
            </div>
            <input type="hidden" value="<%= itemId %>" name="itemId" />
            <a href="/admin/item" class="btn btn-secondary btn-sm"><i class="fa fa-arrow-left"></i> Back</a>
            <button type="submit" class="btn btn-primary btn-sm">
              <i class="fa fa-upload"></i> Add
            </button>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>QTY</th>
                  <th>Image URL</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>QTY</th>
                  <th>Image URL</th>
                  <th>Action</th>
                </tr>
              </tfoot>

              <tbody>
                <% for(let i = 0; i < feature.length; i++) { %>
                <tr>
                  <td><%= i+1 %></td>
                  <td><%= feature[i].name %></td>
                  <td><%= feature[i].qty %> Unit</td>
                  <td>
                    <img src="http://localhost:3000/<%= feature[i].imageUrl %>" alt="imageUrl" height="50px"
                      width="50px" />
                  </td>
                  <td>
                    <form action="/admin/item/<%= itemId %>/feature/<%= feature[i].id %>?_method=DELETE" method="POST">
                      <a href="javascript:void();" type="button" class="btn btn-warning btn-circle btn-sm button-update"
                        data-id="<%= feature[i].id %>" data-name="<%= feature[i].name %>"
                        data-qty="<%= feature[i].qty %>"><i class=" fas fa-edit"></i></a>
                      <button onclick="return confirm('Are you sure you want to delete this item?');" type="submit"
                        class="btn btn-light btn-circle btn-sm"><i class=" fas fa-trash"></i></button>
                    </form>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>