<%- include('../../../partials/header.ejs') %>

<!-- Page Wrapper -->
<div id="wrapper">

  <!-- Sidebar -->
  <%- include('../../../partials/sidebar.ejs') %>
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

      <!-- Topbar -->
      <%- include('../../../partials/navbar.ejs') %>
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <%- include('../../../partials/message.ejs') %>

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800"><%= pageHeading %> </h1>

        <!-- DataTales Example -->
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" id="show-feature-tab" data-toggle="tab" href="#show-feature" role="tab"
              aria-controls="show-feature" aria-selected="true">Show Featured</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="show-activity-tab" data-toggle="tab" href="#show-activity" role="tab"
