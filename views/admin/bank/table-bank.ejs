<div class="card shadow mb-4">
  <div class="card-header py-3">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-modal">
      Add bank
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th width="7%">#</th>
            <th>Name Bank</th>
            <th>No. Rekening</th>
            <th>Nama Pemilik</th>
            <th>Image</th>
            <th>Action</th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>#</th>
            <th>Name Bank</th>
            <th>No. Rekening</th>
            <th>Nama Pemilik</th>
            <th>Image</th>
            <th>Action</th>
          </tr>
        </tfoot>
        <tbody>
          <% for (let i = 0; i < bank.length; i++) { %>
          <tr>
            <td><%= i + 1 %> </td>
            <td><%= bank[i].nameBank %> </td>
            <td><%= bank[i].nomorRekening %> </td>
            <td><%= bank[i].name %> </td>
            <td>
              <img src="http://admin-bakecation.herokuapp.com/<%= bank[i].imageUrl %>" alt="imageUrl" height="50px"
                width="50px">
            </td>
            <td>
              <form action="/admin/bank/<%= bank[i].id %>?_method=DELETE" method="POST">
                <a href="javascript:void()" class="btn btn-warning btn-circle btn-sm button-update"
                  data-id="<%= bank[i].id %>" data-name="<%= bank[i].name %>" data-namebank="<%= bank[i].nameBank %>"
                  data-nomorrekening="<%= bank[i].nomorRekening %>">
                  <i class="fas fa-pencil-alt"></i></a>
                <button onclick="return confirm('Are you sure you want to delete this item?');" type="submit"
                  class="btn btn-light btn-circle btn-sm"><i class=" fas fa-trash"></i></button>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>